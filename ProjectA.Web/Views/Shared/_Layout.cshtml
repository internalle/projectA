<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/client/vendor/css")
    @Styles.Render("~/client/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <ul>
        <li>@Html.ActionLink("DE", "ChangeCulture", "Home", new { culture = "DE" }, null)</li>
        <li>@Html.ActionLink("EN", "ChangeCulture", "Home", new { culture = "EN" }, null)</li>
    </ul>

    @RenderBody()

    @Scripts.Render("~/client/vendor/js")
    @Scripts.Render("~/client/js")
    @RenderSection("scripts", required: false)

    <script>
        new Views.Shared();
    </script>
</body>
</html>
